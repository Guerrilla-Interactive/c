{
  "name": "nextjs-c-template",
  "private": true,
  "scripts": {
    "build": "next build",
    "dev": "next",
    "format": "pnpm exec prettier --write . --ignore-path .gitignore --cache",
    "lint": "next lint -- --ignore-path .gitignore",
    "lint:fix": "pnpm run format && npm run lint -- --fix",
    "start": "next start",
    "type-check": "tsc --noEmit",
    "prepare": "husky install"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "engines": {
    "node": ">=16"
  },
  "dependencies": {
    "@sanity/vision": "^3.24.1",
    "next": "^14.0.4",
    "next-sanity": "^7.0.9",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "sanity": "^3.24.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.18.1",
    "@typescript-eslint/parser": "^6.18.1",
    "autoprefixer": "^10.4.16",
    "eslint": "8.56.0",
    "eslint-config-next": "14.0.4",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "eslint-plugin-tailwindcss": "^3.13.1",
    "husky": "^8.0.3",
    "postcss": "^8.4.33",
    "prettier": "^3.1.1",
    "prettier-plugin-tailwindcss": "^0.5.11",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.3.3"
  }
}
