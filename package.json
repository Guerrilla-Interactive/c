{
  "name": "nextjs-c-template",
  "private": true,
  "scripts": {
    "build": "next build",
    "dev": "next",
    "format": "npx prettier --write . --ignore-path .gitignore --cache",
    "lint": "next lint -- --ignore-path .gitignore",
    "lint:fix": "pnpm run format && npm run lint -- --fix",
    "start": "next start",
    "type-check": "tsc --noEmit"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "engines": {
    "node": ">=16"
  },
  "dependencies": {
    "next": "^14.0.4",
    "next-sanity": "^7.0.9",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "sanity": "^3.24.1"
  }
}
