{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "noUncheckedIndexedAccess": true,
    "incremental": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "jsx": "preserve",
    // Leave the baseUrl unchanged and update paths assume the base dir is root
    // irrespective of whether src dir is present
    "baseUrl": ".",
    "paths": {
      "@/lib/*": ["./src/lib/*"],
      "@/styles/*": ["./styles/*"],
      "@/sanity/*": ["./sanity/*"],
      "@/components/*": ["./src/components/*"],
      "@/nextgen-core-ui/*": ["./src/lib/nextgen-core-ui/*"],
      "@/lib/utils/*": ["./src/lib/utils/*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx",
    "*.ts",
    "*.tsx",
    "src/lib/env/schema.ts",
    "src/lib/env/client.ts",
    "src/lib/env/server.ts"
  ],
  "exclude": ["node_modules"]
}
